extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/sign-in' method='post')
    input(type='hidden' name='_csrf' value=token)
    if user.username
      +field('Username/Email', 'identifier', user.username)
    else if user.email
      +field('Username/Email', 'identifier', user.email)
    else
      +field('Username/Email', 'identifier', '')

    +field('Password', 'password', '', 'password')
    div
      button(type='submit' ) Sign-In
      a(href='/' ) Cancel
  div
    p: a(href='/users/register') Need to create an account?
